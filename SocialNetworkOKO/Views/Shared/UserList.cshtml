@model SocialNetworkOKO.Models.SearchViewModel;

<div class="user-list">
    @if (Model.UserList!.Count != 0)
    {
        @foreach (var user in @Model.UserList)
        {
            <div class="user-card">
                <img src="~/icons/UserIcon.jpg" class="avatar" />
                <div class="details">
                    <h4 class="name">@user.GetFullName()</h4>
                    <p class="status">@user.Status</p>
                    <p class="description">@user.About</p>
                </div>
                @if (!user.IsFriendWithCurrent)
                {
                    <form asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="add-friend-btn">
                            + Друзья
                        </button>
                    </form>
                }
            </div>
        }
    }
    else
    {
        <div class="no-results">
            <label>Поиск не дал результатов.</label>
        </div>
    }
</div>
