@model SocialNetworkOKO.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Register" asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="FirstName">Имя</label><br />
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName">Фамилия</label><br />
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Login">Логин</label><br />
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="EmailReg">Email</label><br />
        <input asp-for="EmailReg" class="form-control" />
        <span asp-validation-for="EmailReg"></span>
    </div>
    <div>
        <label asp-for="Date">День рождения</label><br />
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label asp-for="Month">Месяц рождения</label><br />
        <input asp-for="Month" class="form-control" />
        <span asp-validation-for="Month"></span>
    </div>
    <div>
        <label asp-for="Year">Год рождения</label><br />
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year"></span>
    </div>
    <div>
        <label asp-for="PasswordReg">Придумайте пароль</label><br />
        <input asp-for="PasswordReg" class="form-control" />
        <span asp-validation-for="PasswordReg"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm">Подтвердите пароль</label><br />
        <input asp-for="PasswordConfirm" class="form-control" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>